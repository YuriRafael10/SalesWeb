@model SalesWebMVC.Models.Seller
@{
    ViewData["Title"] = "Details";
    var brazilianCulture = new System.Globalization.CultureInfo("pt-BR");
}

<h1>Detalhes</h1>
<div>
    <h4>Vendedor</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nome
        </dt>
        <dd>
            @Html.DisplayFor(model=>model.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model=>model.Email)
        </dt>
        <dd>
            @Html.DisplayFor(model=>model.Email)
        </dd>
        <dt>
            Data de Nascimento
        </dt>
        <dd>
            @Model.BirthDate.ToString("dd/MM/yyyy") (@(DateTime.Now.Year - Model.BirthDate.Year) anos)
        </dd>
        <dt>
            Salário
        </dt>
        <dd>
            @Model.BaseSalary.ToString("C", brazilianCulture)
        </dd>
        <dt>Departamento</dt>
        <dd>
            @Html.DisplayFor(model=>model.Department.Name)
        </dd>

    </dl>
</div>
<div>
    <a asp-action="Index" class="btn btn-primary">Voltar</a>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">Editar</a>
</div>


